{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for MCP Server for Splunk",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":enableVulnerabilityAlerts",
    ":semanticCommits",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "labels": ["dependencies", "renovate"],
  "enabledManagers": ["pip_requirements", "pip-compile", "poetry", "uv", "github-actions", "dockerfile"],
  "platformAutomerge": false,
  "automerge": false,
  "automergeType": "pr",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "priority-high"],
    "groupName": "Security Updates",
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "description": "Group all Python development dependencies",
      "matchPackagePatterns": ["^pytest", "^black", "^ruff", "^mypy", "^pre-commit"],
      "matchManagers": ["pip_requirements", "pip-compile", "poetry", "uv"],
      "groupName": "Python dev dependencies",
      "labels": ["dependencies", "dev"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Group security scanning dependencies",
      "matchPackagePatterns": ["^bandit", "^safety", "^semgrep"],
      "matchManagers": ["pip_requirements", "pip-compile", "poetry", "uv"],
      "groupName": "Security scanning tools",
      "labels": ["dependencies", "security"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Core MCP and FastMCP dependencies",
      "matchPackagePatterns": ["^mcp", "^fastmcp"],
      "groupName": "MCP dependencies",
      "labels": ["dependencies", "core"],
      "prPriority": 10,
      "automerge": false
    },
    {
      "description": "Splunk SDK - careful updates",
      "matchPackageNames": ["splunk-sdk"],
      "labels": ["dependencies", "core", "splunk"],
      "prPriority": 10,
      "automerge": false
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["dependencies", "ci"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "groupName": "Docker dependencies",
      "labels": ["dependencies", "docker"],
      "automerge": false
    },
    {
      "description": "Major version updates - require approval",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking-change"],
      "prPriority": -1,
      "automerge": false,
      "reviewersFromCodeOwners": true
    },
    {
      "description": "Pin actions by commit SHA",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "Observability and Phoenix dependencies",
      "matchPackagePatterns": ["^arize", "^openinference", "^opentelemetry"],
      "groupName": "Observability dependencies",
      "labels": ["dependencies", "observability"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "schedule": ["after 9am on monday"],
  "timezone": "America/New_York",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.venv/**"
  ],
  "prCreation": "not-pending",
  "prFooter": "This PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate).",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardLabels": ["dependencies", "dashboard"],
  "osvVulnerabilityAlerts": true,
  "ignoreTests": false
}
